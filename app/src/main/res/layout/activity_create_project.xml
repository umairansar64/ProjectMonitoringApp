<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7F6F2"
    tools:context=".CreateProject">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:paddingHorizontal="20dp">

                <EditText
                    android:id="@+id/projectClientAddressInput"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:ems="10"
                    android:hint="Full Address"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text6"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client Address: (Optional)"
                    android:textColor="#054CC5"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/projectClientPhoneInput"
                    app:layout_constraintVertical_bias="0.035" />

                <EditText
                    android:id="@+id/projectClientPhoneInput"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:ems="10"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text5"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client Phone: (Optional)"
                    android:textColor="#054CC5"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/projectClientEmailInput"
                    app:layout_constraintVertical_bias="0.026" />

                <EditText
                    android:id="@+id/projectClientEmailInput"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:ems="10"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text1"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client Email: *"
                    android:textColor="#054CC5"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/projectClientNameInput"
                    app:layout_constraintVertical_bias="0.021" />

                <TextView
                    android:id="@+id/projectIDText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: * (Cannot be edited later)"
                    android:textColor="#054CC5"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/projectTitleInput"
                    app:layout_constraintVertical_bias="0.013" />

                <EditText
                    android:id="@+id/projectClientNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:ems="10"
                    android:hint="Client Name"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/groupClientText"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/projectIDInput"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:ems="10"
                    android:hint="Project ID"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/projectIDText"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/groupClientText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client Name: *"
                    android:textColor="#054CC5"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/projectTutorInput"
                    app:layout_constraintVertical_bias="0.017" />

                <EditText
                    android:id="@+id/projectTutorInput"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:ems="10"
                    android:hint="Project Tutor"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/idText"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/projectUnitInput"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:ems="10"
                    android:hint="Enter Unit Name"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/durationText"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/idText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutor: (Optional)"
                    android:textColor="#054CC5"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/projectIDInput"
                    app:layout_constraintVertical_bias="0.018" />

                <TextView
                    android:id="@+id/durationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unit: "
                    android:textColor="#054CC5"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/projectClientAddressInput"
                    app:layout_constraintVertical_bias="0.048" />

                <EditText
                    android:id="@+id/projectTitleInput"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:ems="10"
                    android:hint="Project Title (Letters and Numbers only)"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.033"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/projectTitleText"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/projectTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title: *"
                    android:textColor="#054CC5"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.035" />

                <Button
                    android:id="@+id/saveBtn"
                    android:layout_width="90dp"
                    android:layout_height="44dp"
                    android:background="@drawable/mybutton"
                    android:text="SAVE"
                    android:textColor="#F6F3F3"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/projectUnitInput"
                    app:layout_constraintVertical_bias="0.135" />

                <TextView
                    android:id="@+id/errorText"
                    android:layout_width="0dp"
                    android:layout_height="43dp"
                    android:textColor="#F44336"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/saveBtn"
                    app:layout_constraintVertical_bias="0.145" />

                <Button
                    android:id="@+id/goBackBtn"
                    android:layout_width="108dp"
                    android:layout_height="44dp"
                    android:background="@drawable/mybutton"
                    android:text="Cancel"
                    android:textColor="#F6F3F3"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.088"
                    app:layout_constraintStart_toEndOf="@+id/saveBtn"
                    app:layout_constraintTop_toBottomOf="@+id/projectUnitInput"
                    app:layout_constraintVertical_bias="0.135" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>